<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tapaatap.KeyboardSelectActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KeyboardListing"
        android:id="@+id/textView"/>

    <Button
        android:id="@+id/button_1"
        android:text="@string/swarachakra"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        />

    <Button
        android:id="@+id/button_2"
        android:text="@string/swiftkey"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/button_1"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/button_3"
        android:text="@string/cdac"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/button_2"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/button_4"
        android:text="@string/sparsh"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/button_3"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/button_5"
        android:text="@string/panini"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/button_4"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/button_6"
        android:text="@string/google"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/button_5"
        android:layout_height="80dp"
        />
    </RelativeLayout>
</ScrollView>
